# AeroSpace - i3-like tiling window manager for macOS
# Docs: https://nikitabobko.github.io/AeroSpace/guide
# Managed by chezmoi - floating apps from .chezmoidata.yaml

config-version = 2
start-at-login = true
enable-normalization-flatten-containers = true
enable-normalization-opposite-orientation-for-nested-containers = true
accordion-padding = 30
default-root-container-layout = 'tiles'
default-root-container-orientation = 'auto'
on-focused-monitor-changed = ['move-mouse monitor-lazy-center']
automatically-unhide-macos-hidden-apps = true
after-startup-command = ['exec-and-forget borders']

[key-mapping]
preset = 'qwerty'

[gaps]
inner.horizontal = 8
inner.vertical = 8
outer.left = 8
outer.bottom = 8
outer.top = 8
outer.right = 8

# ─────────────────────────────────────────────────────────────────────────────
# Window Detection Rules (auto-float specific windows)
# Generated from .chezmoidata.yaml
# ─────────────────────────────────────────────────────────────────────────────

# Settings/preferences windows (regex match)
[[on-window-detected]]
if.window-title-regex-substring = '(?i)(setting|preferences)'
run = 'layout floating'

# Picture-in-Picture
[[on-window-detected]]
if.window-title-regex-substring = '(?i)Picture-in-Picture'
run = 'layout floating'

# Finder dialogs
[[on-window-detected]]
if.app-id = 'com.apple.finder'
if.window-title-regex-substring = '(?i)(copy|move|info|delete)'
run = 'layout floating'

# Shared floating apps
{{- range .aerospace.floatingApps.shared }}
# {{ .comment }}
[[on-window-detected]]
if.app-id = '{{ .id }}'
run = 'layout floating'
{{ end }}
{{- if .work }}
# Work floating apps
{{- range .aerospace.floatingApps.work }}
# {{ .comment }}
[[on-window-detected]]
if.app-id = '{{ .id }}'
run = 'layout floating'
{{ end }}
{{- end }}
{{- if .private }}
# Private floating apps
{{- range .aerospace.floatingApps.private }}
# {{ .comment }}
[[on-window-detected]]
if.app-id = '{{ .id }}'
run = 'layout floating'
{{ end }}
{{- end }}

# Workspace to monitor assignment (by position: 1=left, 2=center, 3=right)
[workspace-to-monitor-force-assignment]
1 = 1
2 = 1
3 = 1
4 = 1
5 = 1
6 = 1
7 = 2
8 = 2
9 = 3
10 = 3

# ─────────────────────────────────────────────────────────────────────────────
# Main Mode
# ─────────────────────────────────────────────────────────────────────────────
[mode.main.binding]
# Layout
alt-slash = 'layout tiles horizontal vertical'
alt-comma = 'layout accordion horizontal vertical'
alt-f = 'fullscreen'
alt-shift-f = 'layout floating tiling'

# Window actions
alt-q = 'close'
alt-b = 'balance-sizes'

# Focus (vim hjkl: h=left, j=down, k=up, l=right)
alt-h = 'focus left'
alt-j = 'focus down'
alt-k = 'focus up'
alt-l = 'focus right'

# Move window
alt-shift-h = 'move left'
alt-shift-j = 'move down'
alt-shift-k = 'move up'
alt-shift-l = 'move right'

# Focus monitor
alt-leftSquareBracket = 'focus-monitor --wrap-around prev'
alt-rightSquareBracket = 'focus-monitor --wrap-around next'

# Resize
alt-minus = 'resize width -50'
alt-equal = 'resize width +50'
alt-shift-minus = 'resize height -50'
alt-shift-equal = 'resize height +50'

# Workspaces (1-9)
alt-1 = 'workspace 1'
alt-2 = 'workspace 2'
alt-3 = 'workspace 3'
alt-4 = 'workspace 4'
alt-5 = 'workspace 5'
alt-6 = 'workspace 6'
alt-7 = 'workspace 7'
alt-8 = 'workspace 8'
alt-9 = 'workspace 9'
alt-0 = 'workspace 10'

# Move window to workspace (focus follows window)
alt-shift-1 = 'move-node-to-workspace 1 --focus-follows-window'
alt-shift-2 = 'move-node-to-workspace 2 --focus-follows-window'
alt-shift-3 = 'move-node-to-workspace 3 --focus-follows-window'
alt-shift-4 = 'move-node-to-workspace 4 --focus-follows-window'
alt-shift-5 = 'move-node-to-workspace 5 --focus-follows-window'
alt-shift-6 = 'move-node-to-workspace 6 --focus-follows-window'
alt-shift-7 = 'move-node-to-workspace 7 --focus-follows-window'
alt-shift-8 = 'move-node-to-workspace 8 --focus-follows-window'
alt-shift-9 = 'move-node-to-workspace 9 --focus-follows-window'
alt-shift-0 = 'move-node-to-workspace 10 --focus-follows-window'

# Workspace navigation
alt-tab = 'workspace-back-and-forth'
alt-shift-tab = 'move-workspace-to-monitor --wrap-around next'

# Enter service mode
alt-s = 'mode service'

# ─────────────────────────────────────────────────────────────────────────────
# Service Mode (alt-shift-;)
# ─────────────────────────────────────────────────────────────────────────────
[mode.service.binding]
esc = ['reload-config', 'mode main']
r = ['flatten-workspace-tree', 'mode main']
f = ['layout floating tiling', 'mode main']
backspace = ['close-all-windows-but-current', 'mode main']

# Join with adjacent window (hjkl)
alt-shift-h = ['join-with left', 'mode main']
alt-shift-j = ['join-with down', 'mode main']
alt-shift-k = ['join-with up', 'mode main']
alt-shift-l = ['join-with right', 'mode main']

# Volume controls
down = 'volume down'
up = 'volume up'
shift-down = ['volume mute-toggle', 'mode main']
